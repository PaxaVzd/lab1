<Window x:Class="ArrayOperations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Array Operations" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Enter custom numbers:" Margin="5"/>
                <TextBox x:Name="txtCustomNumber" Width="100" Margin="5"/>
                <Button Content="Add number" Click="AddNumber_Click" Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Custom range (b):" Margin="5"/>
                <TextBox x:Name="txtB" Width="100" Margin="5"/>
                <TextBlock Text="Custom range (c):" Margin="5"/>
                <TextBox x:Name="txtC" Width="100" Margin="5"/>
            </StackPanel>
            <Button Content="Delete selected" Click="DeleteSelected_Click" Margin="5"/>
            <Button Content="Fill" Click="Fill_Click" Margin="5"/>
            <Button Content="Clear" Click="Clear_Click" Margin="5"/>
            <Button Content="Run" Click="Run_Click" Margin="5"/>
        </StackPanel>
        <ListBox x:Name="listBox" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>
